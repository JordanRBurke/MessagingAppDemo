<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.jordanburke.messagingappdemo.ChatGroupActivity">

    <Button
        android:id="@+id/csgo_button"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/csgo_icon_image"
        app:layout_constraintStart_toEndOf="@+id/sea_of_thieves_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sea_of_thieves_button"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sea_of_thieves_logo"
        app:layout_constraintStart_toEndOf="@+id/rainbow_six_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wow_button"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/worldofwarcraft_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/csgo_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rainbow_six_button"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rainbow_six_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
