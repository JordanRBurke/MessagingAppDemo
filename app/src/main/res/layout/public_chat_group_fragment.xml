<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_woods_background"
    tools:context="com.jordanburke.messagingappdemo.ChatGroupActivity">

    <Button
        android:id="@+id/rainbow_six_button"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rainbow_custom_purple_border_filled"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/csgo_button_group"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/csgo_button_group"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/csgo_custom_button_image"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wow_button_group"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginEnd="68dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/worldofwarcraft_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/rainbow_six_button"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_woods_background">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>